{
  "name": "product-scout-system",
  "version": "1.0.0",
  "private": true,
  "description": "E-commerce Product Scout with HIL Integration - MVP Lean",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
  "//---------------- Dev (local con Docker)": "",
  "dev": "docker-compose -f docker-compose.dev.yml up -d",
  "stop": "docker-compose -f docker-compose.dev.yml down",
  "logs": "docker-compose -f docker-compose.dev.yml logs -f",
  "logs-n8n": "docker-compose -f docker-compose.dev.yml logs -f n8n",
  "logs-db": "docker-compose -f docker-compose.dev.yml logs -f postgres",
  "backup": "bash scripts/backup.sh",
  "deploy": "bash scripts/deploy.sh",
  "setup": "bash scripts/setup.sh",
  "reset": "bash scripts/reset.sh",
  "status": "docker-compose -f docker-compose.dev.yml ps",

  "//---------------- Producción (Railway)": "",
  "build": "tsc -p . || echo \"No tsconfig.json, skipping TypeScript build\"",
  "start": "node ./index.js",
  "prestart": "npm run build",

  "//---------------- Utilidades": "",
  "lint": "prettier -c .",
  "format": "prettier -w ."
}


    "//---------------- Tests utilitarios": ",
    "test-scrapers": "cd custom-scripts && node test-all.js",
    "test-db": "cd custom-scripts && node test-database.js",

    "//---------------- Build/Start para producción (Railway)": "",
    "build": "tsc -p . || echo \"No tsconfig.json, skipping TypeScript build\"",
    "start": "node index.js",
    "prestart": "npm run build",

    "//---------------- Estilo": "",
    "lint": "prettier -c .",
    "format": "prettier -w ."
  },
  "keywords": [
    "e-commerce",
    "product-scout",
    "dropshipping",
    "automation",
    "n8n",
    "hil",
    "product-research"
  ],
  "author": "GenFlowAutomation",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0",
    "dotenv": "^16.3.0",
    "pg": "^8.11.0",
    "puppeteer": "^21.0.0",
    "redis": "^4.6.0"
  }
}
